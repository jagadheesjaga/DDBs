
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/Back"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/demo"
            android:layout_width="204dp"
            android:layout_height="136dp"
            android:layout_alignTop="@+id/button"
            android:layout_marginStart="0dp"
            android:layout_marginTop="135dp"
            android:layout_toEndOf="@+id/button"
            android:background="@color/yellow"
            android:onClick="scanBar"
            android:text=">>>>"
            android:textColor="@color/ve"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btndespatch"
            android:layout_width="205dp"
            android:layout_height="136dp"

            android:layout_above="@+id/demo"
            android:layout_alignEnd="@+id/demo"
            android:layout_marginBottom="-135dp"
            android:background="@color/common_signin_btn_light_text_focused"
            android:text="Despatch"
            android:textColor="@color/ve"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_cutting"
            android:layout_width="wrap_content"
            android:layout_height="136dp"
            android:background="@color/secondary_text"
            android:text="Cutting Rejection"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="110dp"
            android:textColor="@color/ve"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="198dp"
            android:layout_height="136dp"

            android:layout_alignTop="@+id/btn_cutting"
            android:layout_marginStart="-1dp"
            android:layout_toEndOf="@+id/btn_cutting"
            android:background="@color/yellow"
            android:text="SEWING"
            android:textColor="@color/ve"
            android:textSize="20dp" />

        <Button
            android:id="@+id/Add"
            android:layout_width="194dp"
            android:layout_height="136dp"

            android:layout_below="@+id/button"
            android:layout_alignStart="@+id/btn_cutting"
            android:background="@color/yellow"
            android:onClick="scanBar"
            android:text="IRONING"
            android:textColor="@color/ve"
            android:textSize="20dp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="196dp"
            android:layout_height="137dp"
            android:layout_below="@+id/Add"
            android:layout_alignStart="@+id/button"
            android:layout_marginStart="2dp"
            android:layout_marginTop="-137dp"
            android:background="@color/common_signin_btn_light_text_focused"
            android:text="PACKING"
            android:textColor="@color/ve"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5pt"
            android:text="Cotton Blossom Production and quality"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="10pt"
            android:textStyle="bold" />
        <EditText
            android:layout_width="75dp"
            android:layout_height="15dp"
            android:id="@+id/editText"
            android:textAlignment="center"
            android:textColor="#100101"
            android:scrollIndicators="top|left|bottom|right"
            android:clickable="false"
            android:gravity="left"
            android:inputType="textMultiLine"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="V 3.1"
            android:textSize="25dp" />


    </RelativeLayout>
