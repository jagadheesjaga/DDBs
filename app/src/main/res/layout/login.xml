<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="630dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp">

        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:layout_margin="@dimen/spacing_16"
            android:layout_marginTop="25dp">


            <TextView
                android:id="@+id/textView32"
                style="@style/CommonTextViewPrimaryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView_size3"
                android:layout_alignTop="@+id/spinner_line"
                android:layout_marginStart="3dp"
                android:layout_marginTop="74dp"
                android:text="Password :"
                android:textSize="30px"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_size3"
                style="@style/CommonTextViewSecondaryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignStart="@+id/textView31"
                android:layout_alignParentTop="true"
                android:layout_marginStart="310dp"
                android:layout_marginTop="90dp"
                android:text="Unit            :-"
                android:textColor="@color/white"
                android:textSize="30px"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_unit"
                style="@style/spinner_style"
                android:layout_width="246dp"
                android:layout_height="45dp"

                android:layout_alignTop="@+id/textView_size3"
                android:layout_toEndOf="@+id/textView_size3"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/textView"
                style="@style/CommonTextViewPrimaryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView_size3"
                android:layout_alignTop="@+id/spinner_line"
                android:text="Line :"
                android:textSize="30px"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_line"
                style="@style/spinner_style"
                android:layout_width="246dp"
                android:layout_height="45dp"
android:layout_marginTop="25dp"
                android:layout_below="@+id/spinner_unit"
                android:layout_toEndOf="@+id/textView_size3"
                android:textAlignment="center" />

            <Button
                android:id="@+id/login"
                android:layout_width="99dp"
                android:layout_height="208dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="89dp"
                android:layout_toEndOf="@+id/spinner_unit"
                android:background="@color/springgreen"
                android:text="Go ahead" />

            <TextView
                android:id="@+id/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/ve" />
            <TextView
                android:id="@+id/result2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/ve" />

            <EditText
                android:id="@+id/Password"
                android:layout_width="247dp"
                android:layout_height="55dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/spinner_line"
                android:layout_alignEnd="@+id/spinner_unit"
                android:background="@drawable/edittext"
                android:focusableInTouchMode="true"
                android:hint="          Password"
                android:inputType="textPassword"
                android:scrollIndicators="top|left|bottom|right"
                android:textColor="#100101" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
